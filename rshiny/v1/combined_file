server = ${SNOWFLAKE_ACCOUNT}.snowflakecomputing.com
database = ${SNOWFLAKE_DATABASE}
schema = ${SNOWFLAKE_SCHEMA}
warehouse = ${SNOWFLAKE_WAREHOUSE}
role = ${SNOWFLAKE_ROLE}

[ODBC]
Trace = no
TraceFile = /tmp/odbc.log
```

