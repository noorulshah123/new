               pypi.python.org
               files.pythonhosted.org
index-url = https://pypi.org/simple/

# If you have a private PyPI repository, add it here:
# extra-index-url = https://your-private-pypi.com/simple/

[install]
trusted-host = pypi.org
               pypi.python.org
               files.pythonhosted.org
```

